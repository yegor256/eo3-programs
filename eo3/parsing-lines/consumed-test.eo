+alias eo3.parsing-lines.assert
+alias eo3.parsing-lines.consumed
+alias eo3.parsing-lines.ring-buffer
+package eo3.parsing-lines
+tests
+version 0.0.0

# Reads simple stream and passes ring buffer to a simple consumer.
[] > consumes-short-stream
  QQ.io.bytes-as-input > i
    "just a few words here".as-bytes
  assert > @
    0
    malloc.for
      0
      [s] >>
        malloc.of > @
          64
          [m] >>
            size. > @
              content.
                consumed
                  i.read 64
                  ring-buffer.empty m
                  [ring]
                    ring.beheaded > @
                      ring.length

# Reads simple stream and passes ring buffer to a simple consumer.
[] > consumes-long-stream
  QQ.io.bytes-as-input > i
    """
    Lorem ipsum dolor sit amet, consectetur adipiscing elit.
    Duis sit amet tincidunt est. Phasellus condimentum dui at
    risus consequat gravida. Vestibulum risus tortor, vehicula
    id accumsan ut, laoreet vitae ex. Donec porta eleifend velit
    et rutrum. Nunc dapibus eu tellus nec facilisis. Nam vulputate
    nunc elit, convallis consectetur quam lobortis eget. Class
    aptent taciti sociosqu ad litora torquent per conubia nostra,
    per inceptos himenaeos.
    """.as-bytes
  malloc.for > @
    0
    [s] >>
      seq > @
        *
          malloc.of
            0
            [m] >>
              content. > @
                consumed
                  i.read 1600
                  ring-buffer.empty m
                  [ring] >>
                    seq > @
                      *
                        ^.^.s.put
                          ^.^.s.as-number.plus
                            ring.length
                        ring.beheaded
                          ring.length
          assert
            i.bts.size
            s.as-number
