+alias eo3.assert
+alias eo3.head.unrec
+alias eo3.head.lie
+alias eo3.head.truth
+package eo3.head
+tests
+version 0.0.0

# Here, we check that unrec can iterate over just one simple step.
[] > iterates-one-step
  assert > @
    42
    unrec
      42
      [i]
        lie i > @

# Here, we check that unrec can iterate over a number of
# steps.
[] > iterates-a-few-steps
  assert > @
    0
    unrec
      10
      [i]
        if. > @
          i.eq 0
          lie i
          truth
            i.minus 1
