+alias eo3.assert
+alias eo3.head.index-of-byte
+package eo3.head
+tests
+version 0.0.0

# Finds a single byte where it exists.
[] > finds-one-byte
  assert > @
    6
    index-of-byte
      "Hello, друг!".as-bytes
      " ".as-bytes

# Finds a single byte where it exists, at the first position.
[] > finds-first-byte
  assert > @
    0
    index-of-byte
      "John Malkovich".as-bytes
      "J".as-bytes

# Finds the second byte.
[] > finds-second-byte
  assert > @
    1
    index-of-byte
      "John Malkovich".as-bytes
      "o".as-bytes

# Returns negative when byte not found.
[] > doesnt-find-anything
  lt. > @
    index-of-byte
      "John Malkovich".as-bytes
      "\n".as-bytes
    0

# Returns negative when byte array is empty.
[] > doesnt-find-anything-in-empty-bytes
  lt. > @
    index-of-byte
      --
      42-
    0
